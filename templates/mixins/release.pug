mixin release(release)
  h2
    a(href=release.href)
      | #{release.href}
  iframe(
    style='border: 0; width: 400px; height: 439px;'
    seamless
    src=`https://bandcamp.com/EmbeddedPlayer/${release.type}=${release.id}/size=large/bgcol=ffffff/linkcol=0687f5/artwork=small/transparent=true/`)
    a(href=`${release.href}`)
